<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/idTextViewNumberOfQuestions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="題數"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/idSpinnerNumberOfQuestions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/idTextViewNumberOfQuestions"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/idTextViewCapacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="幾個數字相加"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idSpinnerNumberOfQuestions" />

    <Spinner
        android:id="@+id/idSpinnerCapacity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/idTextViewCapacity"
        app:layout_constraintTop_toBottomOf="@+id/idSpinnerNumberOfQuestions" />

    <TextView
        android:id="@+id/idTextViewHowManyDigits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用幾位數的數字"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/idSpinnerCapacity" />

    <Spinner
        android:id="@+id/idSpinnerHowManyDigits"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/idTextViewHowManyDigits"
        app:layout_constraintTop_toBottomOf="@+id/idSpinnerCapacity" />

    <TextView
        android:id="@+id/idTextViewQuestionAns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idSpinnerHowManyDigits" />

    <Button
        android:id="@+id/idButtonAnsNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="開始"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idTextViewQuestionAns" />

    <TextView
        android:id="@+id/idHello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.41" />

</androidx.constraintlayout.widget.ConstraintLayout>